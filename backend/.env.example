# Database
DATABASE_URL=postgresql://user:password@localhost:5432/macca

# Hugging Face API (required when USE_MOCK_AI=false)
HF_API_KEY=your-huggingface-api-key-here
HF_API_BASE_URL=https://api-inference.huggingface.co
HF_LLM_MODEL_ID=microsoft/DialoGPT-medium
HF_ASR_MODEL_ID=openai/whisper-base
HF_TTS_MODEL_ID=microsoft/speecht5_tts

# AI Mode (true = no external API calls, false = use Hugging Face)
USE_MOCK_AI=false

# Security
JWT_SECRET_KEY=change-this-to-random-secret-in-production
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO