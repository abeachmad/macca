# Production Environment Variables
# Copy this to .env.production and fill with actual values

# Database (use managed PostgreSQL in production)
DATABASE_URL=postgresql://user:password@prod-db-host:5432/macca

# Hugging Face API (REQUIRED in production)
HF_API_KEY=hf_your_actual_api_key_here
HF_API_BASE_URL=https://router.huggingface.co
HF_LLM_MODEL_ID=SeaLLMs/SeaLLMs-v3-7B-Chat
HF_ASR_MODEL_ID=openai/whisper-large-v3-turbo
HF_TTS_MODEL_ID=audo/seamless-m4t-v2-large

# AI Mode (MUST be false in production)
USE_MOCK_AI=false

# Security (CRITICAL: use strong random secrets)
JWT_SECRET_KEY=generate-with-openssl-rand-hex-32
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=WARNING
